# ====================================
# BASE DE DATOS
# ====================================
DATABASE_URL=postgresql+asyncpg://gestor_user:gestor_pass@postgres:5432/gestor_ws

# ====================================
# ERP MOCK
# ====================================
ERP_TYPE=mock
# Para Docker usar: http://host.docker.internal:8001
# Para desarrollo local usar: http://localhost:8001
MOCK_ERP_URL=http://host.docker.internal:8001

# ====================================
# LLM CONFIGURATION
# ====================================
# Proveedor: openai | google
LLM_PROVIDER=google

# Modelos disponibles:
#   OpenAI: gpt-5-nano
#   Google: gemini-3-flash, gemini-2.5-flash
LLM_MODEL=gemini-3-flash

# Par√°metros del modelo
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4000

# API Keys (configurar la del provider activo)
OPENAI_API_KEY=tu_clave_de_openai_aqui
GOOGLE_API_KEY=tu_clave_de_google_aqui

# ====================================
# WHATSAPP (Meta Cloud API)
# ====================================
# Por ahora simulado
WHATSAPP_TOKEN=dummy_token
WHATSAPP_PHONE_NUMBER_ID=dummy_id
WHATSAPP_VERIFY_TOKEN=mi_token_secreto

# ====================================
# API CONFIGURATION
# ====================================
API_PORT=8000
LOG_LEVEL=INFO

